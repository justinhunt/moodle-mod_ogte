<div>
    <div id="the_al_levelstats" style="display: none" class="mod-ogte-stats ogte-wide"></div>
    <div contentEditable="true" id="the_al_passage" class="ogte-passage-editor ogte-wide">{{passage}}</div>
    <div id="the_al_articlestats" style="width: 80%; max-width: 800px; border: 1px black solid; padding: 2px; display: none" class="mod-ogte-stats"></div>
    <div id="the_al_status" class="mod-ogte-stats">
     <span id="the_al_status_message" class="ogte-status-message">{{#str}}select-to-ignore, mod_ogte{{/str}}</span> <button id="the_addtoignore" type="button" style="display: none">{{#str}}add-to-ignore, mod_ogte{{/str}}</button>
    </div>
    <br/>
    {{#str}}ignore-list, mod_ogte{{/str}}<br/>
    <input id="the_ignorelist" type="text" class="ogte-wide" placeholder="{{#str}}space-list-of-words, mod_ogte{{/str}}"/>
    <br/><br/>
    {{#str}}select-list-level, mod_ogte{{/str}}<br/>
    <select id="the_listselect" name="listselect">
        {{#listoptions}}
            <option value="{{key}}">{{label}}</option>
        {{/listoptions}}
    </select>
    <select id="the_levelselect" name="levelselect">
    {{#leveloptions}}
        <option value="{{key}}">{{label}}</option>
    {{/leveloptions}}
    </select>
    <br/><br/>
    <div id="the_al_message" style="width: 80%; max-width: 800px; text-align: center"></div>
    <br/><br/>
    <button id="the_al_button" type="button" style="width: 80%; max-width: 800px">{{#str}}level-article, mod_ogte{{/str}}</button>
    <br/><br/>

</div>

